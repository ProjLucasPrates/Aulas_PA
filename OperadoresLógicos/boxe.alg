algoritmo "boxe"
// Função : Faça um programa que solicite o peso do lutador de Boxe e Informe em que categoria de boxe o usuário está
// Autor : Lucas Prates
// Data : 29/07/2022
// Seção de Declarações 
var
peso:real

inicio
escreval("Qual seu peso?")
leia(peso)

//processamento

se (peso > 90.72) entao
   escreval("voce esta na categoria pesado")
fimse

se (peso = 90.72) entao
   escreval("voce esta na categoria cruzador")
fimse

se ((peso >= 79.38) e (peso < 90.72)) entao
   escreval("voce esta na categoria meio-medio")
fimse

se ((peso >= 76.2) e (peso < 79.38)) entao
   escreval("voce esta na categoria super medio")
fimse

se ((peso >= 73.03) e (peso < 76.2)) entao
   escreval("voce esta na categoria medio")
fimse

se ((peso >= 69.85) e (peso < 73.03)) entao
   escreval("voce esta na categoria super meio-medio")
fimse

se ((peso >= 66.68) e (peso < 69.85)) entao
   escreval("voce esta na categoria meio-medio")
fimse

se ((peso >= 63.5) e (peso < 66.68)) entao
   escreval("voce esta na categoria super leve")
fimse

se ((peso >= 61.23) e (peso <63.5)) entao
   escreval("voce esta na categoria leve")
fimse

se ((peso >= 58.97) e (peso < 61.23)) entao
   escreval("voce esta na categoria super pena")
fimse

se ((peso >= 57.15) e (peso < 57.15)) entao
   escreval("voce esta na categoria pena")
fimse

se ((peso >= 55.34) e (peso < 57.15)) entao
   escreval("voce esta na categoria super galo")
fimse

se ((peso >= 53.52) e (peso <55.15)) entao
   escreval("voce esta na categoria galo")
fimse

se ((peso >= 51.71) e (peso < 53.52)) entao
   escreval("voce esta na categoria super mosca")
fimse

se ((peso >= 50.35) e (peso < 51.71)) entao
   escreval("voce esta na categoria mosca")
fimse

se ((peso >= 48.99) e (peso < 50.35))  entao
   escreval("voce esta na categoria mosca ligeiro")
fimse

se ((peso >= 47.63) e (peso < 48.99))  entao
   escreval("voce esta na categoria palha")
fimse

se (peso <= 46.27) entao
   escreval("voce esta na categoria palha ligeiro")
fimse

fimalgoritmo
